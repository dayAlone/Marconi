.product
	&__tradeline
		position absolute
		background red
		
		transform translateX(-50%)
		
		color white
		white-space no-wrap
		padding-top 6px
		font-size 12px
		bottom 10px
		left 20%
		@media (min-width: scr_sm)
			left 50%
			bottom 105px
		&:after, &:before
			position absolute
			top 0
			left -12px
			width calc(100% + 24px)
			height 100%
			background red
			content ""
			z-index -1
		&:after
			transform skew(30deg,0)
		&:before
			transform skew(-30deg,0)
	&__sale
		font-size 8px
		display inline-block
		line-height 10px
		position relative
		top -1px
		span
			padding 0px 4px 0
			&:first-of-type
				padding-top 4px
			
			background red
			color white
	&__type
		text-transform: uppercase
		font-size 16px
		opacity: .6
	&__title
		text-transform: uppercase
		margin-top 10px
		font-size 25px
	&__counter
		height 33px
		overflow: hidden
		text-align: center
		position relative
		float: left
		t opacity
		min-width 47%
		margin-right 5%
		display inline-block
		@media (min-width: scr_sm)
			min-width 45%
		@media (min-width: scr_md)
			max-width 45%
		& + .product__big-button
			margin-right 0
		&--disabled
			pointer-events none
			opacity .3
		&-trigger
			position absolute
			top 0
			left 0
			height 33px
			width 33px
			display: block
			text-align: center
			color black
			border 1px solid black
			font-weight: normal
			line-height 35px
			t all
			font-size 15px
			&--plus
				line-height 37px
				left auto
				right 0
			&:hover
				color red
				border-color red
		&-input
			text-align: center
			font-size 14px
			line-height 35px
			border 0
			font-weight: normal
			width 99%
			height 33px
			border-top 1px solid black
			border-bottom 1px solid black
	&__big-button
		background black
		text-transform: uppercase
		font-weight bold
		height 33px
		line-height 38px
		text-align: center
		color white
		font-size 10px
		white-space no-wrap
		t all
		padding 0 15px
		margin-bottom 20px
		max-width: 45%;
		min-width 47%
		margin-right 5%
		display inline-block
		@media (min-width: scr_sm)
			min-width 45%
			max-width none
			font-size 12px
		&--width
			min-width 70%
		&--buy
			max-width 45%
			@media (max-width: scr_sm)
				width 100%
				max-width none
		&--simmilar
			float right
			@media (min-width: scr_sm)
				float none
		
		&--disabled
			pointer-events none
			color black
			@media (max-width: scr_sm)
				width 100%
				max-width none
		&:focus, &:active
			color white
		&--available
			max-width none
		&--border
			color black
			background white
			box-shadow inset 0 0 0 1px black
			font-size 8px
			&:focus, &:active
				color black
			@media (min-width: scr_sm)
				font-size 10px
			@media (min-width: scr_lg)
				margin-right 15px
		&:hover
			background red
			color white
			box-shadow 0 0 0 1px red
	&__description
		padding-left 22px
		margin-left -22px
		//border-left 2px solid black
		margin-bottom 30px
		@media (min-width: scr_md)
			margin-bottom 0
	.breadcrumbs
		full-width()
		border-top 1px solid #d5dbde
		border-bottom 1px solid #d5dbde
		text-align: center
		padding 10px 0 7px
		@media (min-width: scr_sm)
			margin-top 20px
			line-height 35px
			height 32px
			padding 0
		@media (min-width: scr_md)
			margin-top 0
		span
			margin 0 5px
		a
			color black
			font-size 11px
			@media (min-width: scr_sm)
				font-size 13px
			&:hover
				color red
	.picture
		width 100%
		margin-bottom 10px
		
		@media (min-width: scr_sm)
			margin-bottom 30px
		@media (min-width: scr_md)
			padding-right 25px
		&__big
			min-height 280px
			max-height 280px
			margin-bottom 10px
			@media (min-width: scr_sm)
				margin-bottom 0
				min-height 427px
				max-height 460px
			@media (min-width: scr_md)
				max-height none
			a
				display none
		&--absolute
			position absolute
			pointer-events none
			z-index 500
		.easyzoom-flyout
			min-height 427px
			position absolute
			pointer-events none
			left 100%
			width 100%
			width calc(100% + 32px)
			height 100%
			overflow hidden
			z-index 400
			top 0
			margin-left 10px
			b('loader.gif', center center no-repeat, white, 80px auto)
			
		.easyzoom-notice
			display none
		&__big
			z-index 200
		&__big, &__small
			width 100%
			height 389px
			border 1px solid #e8e8e8
			background-size contain
			background-repeat no-repeat
			background-position center center
		&__zoom
			position absolute
			top 13px
			left 20px
			cursor pointer
			svg path
				fill black
			&:hover
				svg path
					fill red
		&__small
			height 69px
			width 24%
			margin 0 .5%
			display inline-block
			border-collapse: collapse
			&--active
				border-color black !important
			@media (min-width: scr_sm)
				width 100%
				display block
				margin 0 0 15px 0
			box-shadow 0 0 0 3px rgba(255,255,255,.4)
			t all
			transform translateZ(0)
			&:last-of-type
				margin-bottom 0
			
	.colors
		width 100%
		margin-top 10px
		max-height 153px
		overflow auto
		margin-bottom 25px
		&__item
			display inline-block
			width 46px
			height 46px
			margin-right 10px
			background-size 150px auto
			border 1px solid white
			background-position center center
			background-position calc(50% - 20px) calc(50% - 20px)
			box-shadow inset 0 0 0 2px alpha(white,1)
			t all
			&--active
				box-shadow inset 0 0 0 2px alpha(white,.9)
				border-color black
	.props
		float left
		width 100%
		margin-bottom 25px
		@media (min-width: scr_md)
			width 95%
		@media (min-width: scr_lg)
			width 100%
		&__item
			full-width()
			font-size 10px
			text-transform: uppercase
			border-line alpha(black, .1) 6px
			margin-bottom 7px
			color #606268
			&--medium
				.props__value
					font-size 15px
					margin-top -5px
			&--price
				margin-top 30px
				.props__value
					font-size 25px
					font-weight: bold
					color black
					margin-top -16px
					small
						font-size 15px
						margin-top 0
					del
						font-size 19px
						opacity .4
						font-weight 300
						margin-left 5px
		&__name
			background white
		&__name
			float: left
			padding-right 5px
		&__value
			float right
			max-width 70%
			text-align: right
			> span
				background white
				padding-left 5px
	.social-likes
		display inline-block
		margin-left -3px
		&__button
			width 100%
			padding 0
		&__icon
			margin 0
			font-size 1em
			position relative
			left 0
			&_vkontakte
				top 4px
		&__widget
			height 22px
			width 22px
			line-height 22px
			padding 0
			position relative
			text-align: center
			margin 0 2px
			top 6px
	.tabs
		width 100%
		margin-top 20px
		&__title
			width 100%
			border-line(#e2e5e8, 23px)
			min-height 25px
			margin-bottom 20px
		&__content
			display none
			color #272727
			font-size 13px
			a
				color red
				border-line alpha(red,.25)
			ul
				padding-left 20px
			&--active
				display block
		&__trigger
			line-height 28px
			height 24px
			display inline-block
			padding 0 20px
			text-transform: uppercase
			color #8797a2
			font-weight: bold
			font-size 11px
			background transparent
			border 1px solid white
			border-bottom 0
			&--active
				border-color #e2e5e8
				height 25px
				background white
				color black
			&:hover
				color black
			&.tabs__trigger--active:first-of-type
				border-left-color white
	.sizes
		width 100%
		margin-bottom 25px
		margin-top 20px
		position relative
		z-index: 30
		&__title
			text-transform: uppercase
			width 85px
			line-height 14px
			font-size 12px
			display inline-block
		.dropdown
			position relative
			top -7px
			
			&--disable
				pointer-events none
				.dropdown__trigger
					padding 0 10px
					text-align: center
					
			&:hover, &--open
				.dropdown__trigger
					background red
					border-color red
					color white
					svg path
						fill white
			&__frame
				position absolute
				top 100%
				left 0
				min-width 100%
				white-space no-wrap
				background red
				color white
				padding 5px 10px 2px
				a
					font-weight: bold
					color white
					font-size 13px
					full-width()
			&__trigger
				display inline-block
				border 1px solid black
				height 26px
				padding 0 7px 0 9px
				line-height 30px
				font-weight: bold
				color black
				font-size 13px
				position relative
				svg
					margin-left 5px
					max-width 7px
					position relative
					top -1px
					path
						fill black
.available
	&__row
		position relative
		
	&__product-name
		text-transform: uppercase
		font-weight: bold
		
		text-align: center
		margin-bottom 3px
		font-size 18px
		line-height 21px
		@media (min-width: scr_sm)
			font-size 28px
			line-height 34px
			text-align: left
			font-size 23px
			line-height 26px
	&__product-artnumber
		text-transform: uppercase
		font-size 11px
		text-align: center
		margin-bottom 20px
		@media (min-width: scr_sm)
			text-align: left
			margin-bottom 0
	&__title
		@media (min-width: scr_sm)
			position absolute
			top 50%
			max-width 60%
			transform translateY(-50%)
	&__icon
		width 15px
		height 15px
		display inline-block
		position relative
		top 3px
		border-radius 14px
		&--true
			background #009100
		&--false
			background #ff282d
	&__picture
		width 170px
		height 170px
		background-size auto 90%
		margin-bottom 10px
		background-repeat no-repeat
		background-position center center
		
	&__table
		font-size 11px
		@media (min-width: scr_md)
			font-size 13px
		tbody
			td
				padding: 10px 15px 10px 0;
				text-transform: uppercase
				font-weight: bold
				a
					color black
					font-size 12px
					@media (min-width: scr_sm)
						font-size 14px
					border-line(alpha(@color, .3))
					&:hover
						color red
						border-line(alpha(@color, .3))
				span
					margin-right 8px
				&.available__address
					font-size 12px
					text-transform: none
					font-weight: normal
		th
			border-top 1px solid #e2e5e8
			border-bottom 1px solid #e2e5e8
			font-weight: normal
			font-size 12px
			padding 7px 0 2px
			