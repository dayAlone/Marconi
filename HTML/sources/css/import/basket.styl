.basket
	.nav__item:nth-child(6)
		background white
		color black
	small
		strong
			text-transform: uppercase
			margin-bottom 5px
			display inline-block
			font-size 10px
			white-space no-wrap
	.datepicker
		z-index 1000 !important
		&.dropdown-menu
			font-family 'Proxima', 'Helvetica Neue', 'Arial', sans-serif
			border-radius 0
			table tr td.active, table tr td.active:hover, table tr td.active.disabled, table tr td.active.disabled:hover
				background red
			td, th
				border-radius 0
				padding: 5px 2px 0px
	.bx-sls
		margin-bottom 10px
		.bx-ui-sls-pane
			border-radius 0
			font-size 13px
			.dropdown-item
				padding-bottom 4px
				border-radius 0
				&.bx-ui-sls-variant-active
					background red
					.dropdown-item-text
						color alpha(#fff,.6)
						span
							color white
		.bx-ui-sls-clear
			background url(../images/svg/close.svg) center center no-repeat
			background-size 16px auto
			margin-top -1px
			opacity .7
			&:hover
				opacity 1
		.dropdown-block
			padding 0 0px
			border-radius 0
			box-shadow none
			border-color #d5dbdf
			max-height 30px
			.dropdown-icon, .dropdown-fade2white
				display none
			input
				max-height 30px
				line-height 34px
				font-family 'Proxima', 'Helvetica Neue', 'Arial', sans-serif
	&__delete
		position absolute
		right 15px
		top 50%
		margin-top -13px
		width 20px
		height 20px
		line-height 20px
		opacity .3
		t opacity
		&:hover
			opacity 1
		svg
			width 21px
			height 21px
			path
				fill red
				stroke red
				stroke-location inside
				stroke-width 1px
	&__frame
		margin-bottom 40px
		&--no-sale
			.basket__title, .basket__item, .basket__footer
				.col-xs-4
					width 34%
	&__title, &__item, &__footer
		.col-xs-offset-7
			margin-left: 55.3333333340%
		.col-xs-4
			width 30%
		.col-xs-3
			width 20%
		.col-xs-2
			width 13%
		.col-xs-1
			width 12.333333333%
	&__footer
		text-transform: uppercase
		border-top 1px solid black
		padding-top 25px
		margin-top 5px
	&__title
		text-transform: uppercase
		font-weight: bold
		padding 10px 0 5px
		margin-bottom 15px
		color #6e6f79
		font-size 14px
		text-align: center
		border-top 1px solid #d5dbdf
		border-bottom 1px solid #d5dbdf
	&__item
		text-transform: uppercase
		text-align: center
		position relative
		overflow hidden
		t max-height
		@media (min-width: scr_md)
			line-height: 110px
			max-height @line-height
		@media (min-width: scr_lg)
			line-height: 130px
			max-height @line-height
		[class*='col-'] > *
			display inline-block
			vertical-align middle
	&__total, &__sale-total
		font-size 15px
		display inline-block
		position relative
		&:after
			position absolute
			content attr(data-text)
			right 100%
			margin-right 7px
			font-weight: normal
			font-weight 300
			top -2px
	&__count
		height 30px
		width 60px
		line-height 31px
		text-align: center
		position relative
		top -2px
		border 1px solid #b7c0c8
	&__name
		line-height 20px
		text-transform: uppercase
		font-size 12px
		color alpha(black, .6)
	&__brand
		font-weight: bold
		font-size 14px
		color black
	&__picture
		background-size auto 90%
		background-repeat no-repeat
		background-position center center
		@media (min-width: scr_md)
			height 90px
			width 90px	
			margin-right 5px
		@media (min-width: scr_lg)
			height 120px
			width 120px	
			margin-right 10px
	&__frame
		width 100%
		border 3px solid black
		padding 35px 15px 20px
		position relative
		&:after
			position absolute
			background white
			content attr(data-text)
			text-transform: uppercase
			font-weight: bold
			padding 0 20px
			font-size 30px
			left 50%
			transform translateX(-50%)
			display: inline-block
			top -16px
	&__block
		width 100%
		padding 15px 13px 3px
		border 1px solid #d5dbdf
		margin-bottom 100px
		position relative
		&--loading
			pointer-events none
			&:after
				z-index 10
				position absolute
				content ""
				top 0
				left 0
				width 100%
				height 100%
				background alpha(white, .6) url(../images/loader.gif) center center no-repeat
				background-size 80px auto
		.iradio, input[type="radio"]
			display inline-block
			appearance none
			border 1px solid #d5dbdf
			border-radius 50%
			width 14px
			height 14px
			vertical-align: middle
			position relative
			top -1px
			box-shadow inset 0 0 0 2px white
			t(all)
			&:hover, &.hover
				border-color red
			&:checked, &.checked
				background red
				border-color red
		.blue-arrow
			position absolute
			right 20px
			top 30px
		input.date:focus + .blue-arrow svg path
			fill white
		nobr
			margin-right 15px
			
		.dropdown
			position relative
			display inline-block
			width 100%
			&--open
				.dropdown__trigger
					background red
					color white
					svg path
						fill white
			&__frame
				background red
				position absolute
				top 100%
				left 0
				min-width 100%
				z-index 10
			&__item
				full-width()
				padding 9px 10px 3px
				color white
				font-size 12px
				t background
				&:hover
					background black
			&__trigger
				width 100%
				background #d5dbdf
				full-width()
				height 30px
				line-height 35px
				color black
				font-size 12px
				padding 0 10px
				position relative
				z-index 20
				&:hover
					background red
					color white
					svg path
						fill white
				svg
					position absolute
					right 10px
					top 13px
		label
			font-weight normal
			font-size 12px
			text-transform: uppercase
			margin-left 5px
			margin-bottom 10px
			color #4e4e51
			& + .iradio, & + input[type="radio"]
				margin-left 25px
		input[type="text"], input[type="email"], textarea
			width 100%
			border 1px solid #d5dbdf
			padding 0 10px
			height 30px
			margin-bottom 10px
			line-height 34px
			font-size 12px
			t border
			&.date
				background #d5dbdf
				border-color #d5dbdf
				&:focus
					border-color red
					background red
					color white
			&.small
				max-width 18.4%
				& + .small
					margin-left 2%
			&:focus
				outline 0
				border-color black
			&::-webkit-input-placeholder
				text-transform: uppercase
		textarea
			margin-bottom 0
			resize none
			height 106px
			padding 10px
			line-height 15px
		&-title
			text-transform: uppercase
			width 100%
			font-weight: bold
			font-size 20px
			text-align: center
			margin-bottom 10px