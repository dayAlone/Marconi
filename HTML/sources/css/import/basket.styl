#basket_form, #ORDER_FORM
	full-width()
.basket
	full-width()
	label[for="register_user"]
		color black
		text-transform: none
		margin-bottom -5px
	.icheckbox
		@extends .filter .icheckbox
		width 13px
		height 13px
		box-shadow inset 0 0 0 2px white
		position relative
		top 2.5px
		margin-right 3px
		&.checked
			background red
			border-color red
	.row
		position relative
	.total
		&__frame
			bottom 0
			right 0
			padding 0 10px
			@media (min-width: scr_sm)
				position absolute
				width 50%
			@media (min-width: scr_md)
				width: 33.33333333%;
		text-transform: uppercase
		margin-top 20px
		&__item
			&--big
				margin-top 7px
				font-weight: bold
				font-size 25px
	.nav__item:nth-child(6)
		background white
		color black
	.parsley
		&-errors-list
			display none
		&-error
			border-color red !important
	small
		strong
			text-transform: uppercase
			margin-bottom 5px
			display inline-block
			font-size 10px
			white-space no-wrap
	.datepicker
		z-index 1000 !important
		&.dropdown-menu
			font-family 'Proxima', 'Helvetica Neue', 'Arial', sans-serif
			border-radius 0
			table tr td.active, table tr td.active:hover, table tr td.active.disabled, table tr td.active.disabled:hover
				background red
			td, th
				border-radius 0
				padding: 5px 2px 0px
	.bx-sls
		margin-bottom 10px
		.bx-ui-sls-pane
			border-radius 0
			font-size 13px
			.dropdown-item
				padding-bottom 4px
				border-radius 0
				&.bx-ui-sls-variant-active
					background red
					.dropdown-item-text
						color alpha(#fff,.6)
						span
							color white
		.bx-ui-sls-clear
			background url(../images/svg/close.svg) center center no-repeat
			background-size 16px auto
			margin-top -1px
			opacity 0
			
			&:hover
				opacity 1
		.dropdown-block
			padding 0 0px
			border-radius 0
			box-shadow none
			border-color #d5dbdf
			max-height 30px
			.dropdown-icon, .dropdown-fade2white
				display none
			input
				max-height 30px
				line-height 34px
				font-family 'Proxima', 'Helvetica Neue', 'Arial', sans-serif
	&__delete
		position absolute
		right 15px
		top 50%
		width 12px
		height 12px
		line-height 20px
		opacity .3
		t opacity
		margin-top -38px
		@media (min-width: scr_xs)
			margin-top -10px
		@media (min-width: scr_sm)
			width 20px
			height 20px
			margin-top -15px
		@media (min-width: scr_md)
			margin-top -13px
		&:hover
			opacity 1
		svg
			width 15px
			height 15px
			@media (min-width: scr_sm)
				width 21px
				height 21px
			path
				fill red
				stroke red
				stroke-location inside
				stroke-width 1px
	&__frame
		margin-bottom 40px
		&--no-sale
			.basket__title, .basket__item, .basket__footer
				@media (min-width: scr_md)
					.col-md-4
						width 34%
	&__title, &__item, &__footer
		@media (min-width: scr_md)
			.col-md-offset-7
				margin-left: 55.3333333340%
			.col-md-4
				width 30%
			.col-md-3
				width 20%
			.col-md-2
				width 13%
			.col-md-1
				width 12.333333333%
	&__footer
		text-transform: uppercase
		border-top 1px solid black
		margin-top 10px
		@media (max-width scr_xs)
			.col-xs-1
				display none
			.col-xs-3, .col-xs-2
				width 50%
				text-align: right !important
			.col-md-offset-7
				margin-left 0
		@media (min-width scr_xs)
			padding-top 25px
			margin-top 5px
	&__title
		text-transform: uppercase
		font-weight: bold
		padding 10px 0 5px
		margin-bottom 15px
		color #6e6f79
		font-size 11px
		text-align: center
		border-top 1px solid #d5dbdf
		border-bottom 1px solid #d5dbdf
		display none
		@media (min-width: scr_xs)
			display block
		@media (min-width: scr_sm)
			font-size 14px
	&__item
		text-transform: uppercase
		text-align: center
		position relative
		overflow hidden
		t max-height
		
		font-size 12px
		@media (max-width scr_xs)
			.col-xs-4
				width 100%
			.col-xs-2
				width 23%
		line-height: 50px
		max-height 100px
		& + .basket__item
			padding-top 13px
			border-top 1px solid #ccc
			@media (min-width scr_xs)
				border-top 0
				padding-top 0	
		@media (min-width scr_xs)
			line-height: 60px
			max-height @line-height
			
		@media (min-width: scr_sm)
			line-height: 70px
			font-size 14px
			max-height @line-height
		@media (min-width: scr_md)
			line-height: 110px
			max-height @line-height
		@media (min-width: scr_lg)
			line-height: 130px
			max-height @line-height
		[class*='col-'] > *
			display inline-block
			vertical-align middle
		.rubl
			@media (min-width scr_xs)
				margin-right 20px
			@media (min-width: scr_md)
				margin-right 0
	
	&__total, &__sale-total
		
		display inline-block
		position relative
		margin-top 20px
		font-size 13px
		@media (min-width scr_xs)
			font-size 15px
		&:after
			margin-top 0
			position absolute
			content attr(data-text)
			right 100%
			margin-right 7px
			font-weight: normal
			font-weight 300
			top -2px
	&__count
		width 40px
		text-align: center
		position relative
		border 1px solid #b7c0c8
		appearance none
		border-radius 0
		top -2px
		height 25px
		line-height 26px
		@media (min-width: scr_sm)
			height 30px
			line-height 31px
			width 60px
	&__name
		line-height 15px
		text-transform: uppercase
		font-size 10px
		color alpha(black, .6)
		@media (min-width: scr_sm)
			font-size 12px
			line-height 20px
	&__brand
		font-weight: bold
		font-size 12px
		color black
		@media (min-width: scr_sm)
			font-size 14px
	&__picture
		background-size auto 90%
		background-repeat no-repeat
		background-position center center
		&--no-image
			background-size auto 50%
		width 55px
		height 50px
		margin-right 5px
		@media (min-width scr_xs)
			width 0
			height 0
			margin-right 0
		@media (min-width: scr_md)
			height 90px
			width 90px	
			margin-right 5px
		@media (min-width: scr_lg)
			height 120px
			width 120px	
			margin-right 10px
	&__frame
		width 100%
		border 3px solid black
		padding 35px 15px 20px
		position relative
		&:after
			position absolute
			background white
			content attr(data-text)
			text-transform: uppercase
			font-weight: bold
			padding 0 20px
			left 50%
			transform translateX(-50%)
			display: inline-block
			top -12px
			font-size 17px
			white-space no-wrap
			@media (min-width: scr_sm)
				font-size 25px
				top -16px
			@media (min-width: scr_md)
				font-size 30px
	.delivery
		margin-top 13px
	#ORDER_FORM
		margin-bottom 60px
	.page
		input[type="submit"]
			width 100%
			margin-top 5px
			background black
			border 0
			text-transform: uppercase
			font-weight: bold
			font-size 17px
			text-align: center
			height 51px
			line-height 54px
			color white
			t background
			&:hover
				background red
			&:disabled
				background alpha(black,.3)
	&__block
		width 100%
		padding 15px 13px 3px
		border 1px solid #d5dbdf
		position relative
		&--profile
			.row
				padding 0 5px
				> [class*='col-']
					padding 0 5px
		&--loading
			pointer-events none
			&:after
				z-index 10
				position absolute
				content ""
				top 0
				left 0
				width 100%
				height 100%
				background alpha(white, .6) url(../images/loader.gif) center center no-repeat
				background-size 80px auto
		.iradio, input[type="radio"]
			display inline-block
			appearance none
			border 1px solid #d5dbdf
			border-radius 50%
			width 14px
			height 14px
			vertical-align: middle
			position relative
			top -1px
			box-shadow inset 0 0 0 2px white
			t(all)
			&:hover, &.hover
				border-color red
			&:checked, &.checked
				background red
				border-color red
		.blue-arrow
			position absolute
			right 20px
			top 30px
			pointer-events none
		input.date:focus + .blue-arrow svg path
			fill white
		nobr
			margin-right 12px
			&:last-of-type
				margin-right 0
		.bx-ui-sls-quick-locations
			display block
		.dropdown
			position relative
			display inline-block
			width 100%
			.parsley-errors-list.filled
				position absolute
				border 1px solid red
				top 0
				left 0
				width 100%
				height 100%
				pointer-events none
				display block
				z-index 200
				li
					display none
			&--open
				.dropdown__trigger
					background red
					color white
					svg path
						fill white
			&__frame
				background red
				position absolute
				top 100%
				left 0
				min-width 100%
				z-index 10
				max-height 140px
				overflow scroll
			&__item
				full-width()
				padding 9px 10px 3px
				color white
				font-size 12px
				t background
				&:hover
					background black
			&__trigger
				width 100%
				background #d5dbdf
				full-width()
				height 30px
				line-height 35px
				color black
				font-size 12px
				padding 0 10px
				position relative
				z-index 20
				&:hover
					background red
					color white
					svg path
						fill white
				svg
					position absolute
					right 10px
					top 13px
		label
			font-weight normal
			font-size 12px
			text-transform: uppercase
			margin-left 1px
			margin-bottom 10px
			
			color #4e4e51
			& + .iradio, & + input[type="radio"]
				margin-left 25px
		
		input[type="text"], input[type="email"], textarea
			width 100%
			border 1px solid #d5dbdf
			padding 0 8px
			height 30px
			margin-bottom 10px
			line-height 34px
			font-size 12px
			t border
			&.date
				background #d5dbdf
				border-color #d5dbdf
				&:focus
					border-color red
					background red
					color white
			&.small
				max-width 18.4%
				&[name="ORDER_PROP_6"]
					margin-left 0 !important
				& + .small
					margin-left 2%
			&:focus
				outline 0
				border-color black
			&::-webkit-input-placeholder
				text-transform: uppercase
				font-size 11px
		.parsley-errors-list + input.small
			margin-left 2%
		textarea
			margin-bottom 0
			resize none
			height 106px
			padding 10px
			line-height 15px
		&-title
			text-transform: uppercase
			width 100%
			font-weight: bold
			text-align: center
			margin-bottom 10px
			font-size 18px
			@media (min-width: scr_sm)
				font-size 20px

.order
	&__total
		margin-top 30px
		@media (min-width: scr_sm)
			margin-top 0
	&__profile
		margin-bottom 30px
		@media (min-width: scr_md)
			margin-bottom 0

.cabinet
	.icheckbox
		@extends .basket .icheckbox
		+ label
			width auto