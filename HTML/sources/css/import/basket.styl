.basket
	.nav__item:nth-child(6)
		background white
		color black
	&__frame
		&--no-sale
			.basket__title, .basket__item, .basket__footer
				.col-xs-4
					width 34%
	&__title, &__item, &__footer
		.col-xs-offset-7
			margin-left: 55.3333333340%
		.col-xs-4
			width 30%
		.col-xs-3
			width 20%
		.col-xs-2
			width 13%
		.col-xs-1
			width 12.333333333%
	&__footer
		text-transform: uppercase
		border-top 1px solid black
		padding-top 25px
		margin-top 5px
	&__title
		text-transform: uppercase
		font-weight: bold
		padding 10px 0 5px
		margin-bottom 15px
		color #6e6f79
		font-size 14px
		text-align: center
		border-top 1px solid #d5dbdf
		border-bottom 1px solid #d5dbdf
	&__item
		text-transform: uppercase
		text-align: center
		@media (min-width: scr_md)
			line-height: 110px
		@media (min-width: scr_lg)
			line-height: 130px
		[class*='col-'] > *
			display inline-block
			vertical-align middle
	&__total, &__sale-total
		font-size 15px
		display inline-block
		position relative
		&:after
			position absolute
			content attr(data-text)
			right 100%
			margin-right 7px
			font-weight: normal
			font-weight 300
			top -2px
	&__count
		height 30px
		width 60px
		line-height 31px
		text-align: center
		position relative
		top -2px
		border 1px solid #b7c0c8
	&__name
		line-height 20px
		text-transform: uppercase
		font-size 12px
		color alpha(black, .6)
	&__brand
		font-weight: bold
		font-size 14px
		color black
	&__picture
		background-size contain
		background-repeat no-repeat
		background-position center center
		@media (min-width: scr_md)
			height 90px
			width 90px	
			margin-right 5px
		@media (min-width: scr_lg)
			height 120px
			width 120px	
			margin-right 10px
	&__frame
		width 100%
		border 3px solid black
		padding 35px 15px 20px
		position relative
		&:after
			position absolute
			background white
			content attr(data-text)
			text-transform: uppercase
			font-weight: bold
			padding 0 20px
			font-size 30px
			left 50%
			transform translateX(-50%)
			display: inline-block
			top -16px
	&__block
		width 100%
		padding 15px 13px 3px
		border 1px solid #d5dbdf
		margin-top 20px
		margin-bottom 100px
		.iradio, input[type="radio"]
			display inline-block
			appearance none
			border 1px solid #d5dbdf
			border-radius 50%
			width 14px
			height 14px
			vertical-align: middle
			position relative
			top -1px
			box-shadow inset 0 0 0 2px white
			t(all)
			&:hover, &.hover
				border-color red
			&:checked, &.checked
				background red
				border-color red
				
		label
			font-weight normal
			font-size 12px
			text-transform: uppercase
			margin-left 7px
			margin-bottom 10px
			color #4e4e51
			& + .iradio, & + input[type="radio"]
				margin-left 25px
		input[type="text"], input[type="email"], textarea
			width 100%
			border 1px solid #d5dbdf
			padding 0 10px
			height 30px
			margin-bottom 10px
			line-height 34px
			font-size 12px
			t border
			&:focus
				outline 0
				border-color black
			&::-webkit-input-placeholder
				text-transform: uppercase
		textarea
			margin-bottom 0
			resize none
			height 106px
			padding 10px
			line-height 15px
		&-title
			text-transform: uppercase
			width 100%
			font-weight: bold
			font-size 20px
			text-align: center
			margin-bottom 10px