.signup
	.row + .row
		margin-top 25px
	&__label
		text-transform: uppercase
		width 100%
		font-weight: bold
		color #171929
		margin-top 20px
	&__label, &__notice
		font-size 12px
		@media (min-width scr_md)
			font-size 13px
		@media (min-width scr_lg)
			font-size 14px
	&__height
		min-height 202px
		@media (min-width scr_lg)
			min-height: 204px
	&__refresh
		margin-top 48px
		display: inline-block
		svg
			width 39px
			height 39px
			path
				fill black
			&:hover
				path
					fill red
	&__captcha
		background-size cover
	&__captcha, &__input, &__submit, &__radio, &__checkbox
		width 100%
		border 1px solid #96969d
		height 47px
		line-height: 48px
		padding 0 15px
		font-size 15px
		margin 0
		t border
		&.parsley-error, .parsley-error &
			border-color red
		&:focus
			outline none
			border-color black
	&__notice
		display: inline-block
		font-weight: normal
		width calc(100% - 45px)
		margin-left 8px
		vertical-align: top
		margin-top 3px
	&__checkbox
		width 20px
		display: inline-block
		height 20px
		appearance none
		vertical-align: top
		position: relative
		top -4px
		t background
		box-shadow inset 0 0 0 4px white
		&:checked
			background black
			border-color black
	&__radio
		cursor: pointer
		width 47px
		width calc(50% - 5px)
		display: inline-block
		text-align: center
		padding 0
		line-height 50px
		opacity .5
		t opacity
		& + .signup__radio
			margin-left 10px
		svg
			display: inline-block
			vertical-align: middle
			path
				fill rgba(0,0,0,.7)
		input:checked + &, &:hover
			opacity 1
			
	&__input
		
		textarea&
			line-height 20px
			padding 10px 15px
			min-height 151px
			resize none
	&__submit
		border 0
		background black
		color white
		text-transform: uppercase
		font-weight: bold
		line-height 50px
		padding-top 2px
		t background
		&:hover
			background red