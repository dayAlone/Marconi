.catalog
	&__card
		position fixed
		top 50%
		left 50%
		max-width 700px
		text-align: center
		font-size 23px
		color white
		z-index 10001
		margin-left -350px
		margin-top -244px
		line-height 28px
		&-text
			t opacity
		&-button
			display inline-block
			margin-top 20px
			border 2px solid white
			padding 10px 20px 3px
			color white
			font-size 15px
			
			font-weight: bold
			text-transform: uppercase
			t all
			&:hover, &:focus
				border-color red
				background red
				color white
		img
			margin-bottom 25px
			max-width 100%
		&-frame
			position fixed
			top 0
			left 0
			width 100%
			height 100%
			background alpha(black, .8)
			z-index 10000
			t opacity
	.search-page
		display none
	.nav__item:nth-child(6)
		background white
		color black
	&__back
		display inline-block
		height 32px
		border 2px solid black
		color black
		text-transform: uppercase
		font-size 11px
		font-weight: bold
		line-height 33px
		padding 0 5px
		position relative
		text-align: center
		width 100%
		&:after
			content ""
			position absolute
			width 8px
			height calc(100% + 4px)
			background url(../images/arrow.jpg) top left no-repeat
			background-size auto 200%
			z-index 2000
			top -2px
			left -2px
		&:hover, &:focus
			background black
			color white
			&:after
				background-position bottom left
	&__nav
		margin-bottom 40px
		position relative
		z-index 700
		full-width()
		
	&__counter
		position absolute
		left 100%
		z-index 300
		white-space no-wrap
		background white
		border 1px solid red
		font-size 13px
		height 31px
		line-height 34px
		padding 0 15px
		display none
		margin-top 2px
		&:before, &:after
			content ""
			position absolute
			right: 100%;
			top: 50%;
			transform translateY(-50%)
			border: solid transparent;
			height: 0;
			width: 0;
			pointer-events: none;
		&:after
			border-right-color red
			border-width 6px
		&:before
			border-right-color white
			border-width 5px
			z-index 3
		a
			color red
			border-line alpha(red, .2, 12px)
	&__toolbar
		margin-top 8px
		border-bottom 1px solid #d5dbdf
		padding-bottom 8px
		text-transform uppercase
		font-size 12px
		color #171929
		position relative
		z-index 400
		.dropdown
			position relative
			z-index 10
			
			&__frame
				padding-top 20px
				min-width 110%
				left -10px
				top -11px
				position absolute
				padding 30px 0px 0px 0px
				background white
				box-shadow 0 0 10px rgba(116, 132, 149, 0.8)
			&__item
				float left
				clear both
				font-size 12px
				line-height 15px
				color black
				white-space no-wrap
				padding 9px 10px 3px
				width 100%
				&:hover
					background black
					color white
			&__trigger
				color black
				position relative
				z-index 5
				svg
					margin-left 3px
					vertical-align baseline
					position relative
					top -1px
	article
		margin-bottom 50px
	&__seo
		width 100%
		margin-top 30px
		p
			font-size 12px
			color #6e6e6e
			line-height 16px
	&__title
		text-transform uppercase
		font-weight bold
		font-size 28px
		margin-top 25px
		margin-bottom 15px
		padding-bottom 0
		line-height 28px
	&__footer
		padding 19px 0 14px
		border-bottom 1px solid #d5dbdf
		border-top 1px solid #d5dbdf
		font-size 12px
		margin-top 30px
		.footer-nav
			&__item
				font-weight bold
				font-size 13px
				text-transform uppercase
				color black
				margin-right 30px
				&:hover
					color red
	&__intro
		width 100%
		height 310px
		position relative
		margin-bottom 20px
		overflow hidden
		background red
		display block
		cursor pointer
		&--big
			height 640px
		&-picture
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background-size cover
			t all, 1s
			transform scale(1)
			opacity 1
			&:hover
				transform scale(1.05)
				opacity .8
		&-text
			text-transform uppercase
			color white
			position absolute
			z-index 20
			font-size 34px
			font-weight 300
			left 15px
			top 8px
			white-space no-wrap
			&--bottom
				top auto
				bottom 5px
			&--right
				left auto
				right 15px
			&--black
				color black
			&--center
				left 50%
				top 50%
				transform translate(-50%, -50%)
	&__divider
		width 100%
		border-bottom 2px solid black
		margin 20px 0 20px
		&--title
			position relative
			&:after
				content attr(data-title)
				position absolute
				background white
				text-transform uppercase
				font-weight bold
				padding-right 14px
				top -7px
	.product
		width 100%
		position relative
		text-align center
		padding-bottom 10px
		margin-bottom 20px
		text-transform uppercase
		font-weight bold
		font-size 14px
		z-index 20
		background white
		&--hover
			.product__picture
				transform scale(1.03)
			.product__icon, .product__button, .product__frame
				opacity 1
				pointer-events initial
				transition-duration .5s
			.product__frame
				box-shadow 0 0 10px rgba(116, 132, 149, 0.8)
				background white
				transition-duration .2s
		&--index, &--hover
			z-index 50
		&--absolute
			z-index 500
			position absolute
		&__frame
			position absolute
			background white
			z-index 0
			width 100%
			height 100%
			padding 10px 10px 50px 10px
			box-sizing initial
			top -10px
			left -10px
		&__content
			position relative
			z-index 7
			min-height 308px
		&__icon, &__button, &__frame, &__sizes
			position absolute
			z-index 5
			opacity 0
			pointer-events none
			t all, .07s
		&__sizes
			width 100%
			left 0
			top 230px
			background white
			z-index 300
			min-height 134px
			padding-top 14px
			.product__brand
				margin-bottom 10px
			.product__button
				bottom 10px
				opacity 1
				pointer-events none
			&--open
				pointer-events initial
				opacity 1
				.product__button
					pointer-events initial
			
		&__size
			display inline-block
			border 1px solid #a0a0a0
			color #a0a0a0
			height 21px
			line-height 24px
			min-width 30px
			font-size 12px
			position relative
			z-index 350
			t all
			&:hover
				border-color black
				color black
			&--active
				background black
				border-color black
				color white
				&:hover
					color white
		&__frame
			opacity 1
			background transparent
			z-index 0
		&__button
			bottom -36px
			border 1px solid black
			text-transform uppercase
			font-weight bold
			font-size 10px
			width 43%
			text-align center
			padding 7px 10px 2px 10px
			color black
			text-align: center
			&:hover
				border-color red
				background red
				color white
			&--more, &--cancel
				left 4px
			&--simmilar, &--buy
				right 4px
			&--center
				width 60.5%
				left 50%
				transform translateX(-50%)
		&__icon
			top 0px
			z-index 15
			svg path
				fill black
			&:hover
				svg path
					fill red
			&--zoom
				left 0px
			&--cart
				right 0px
		&__name
			font-size 12px
			opacity .6
			margin-bottom 10px
			font-weight normal
		&__type
			font-weight normal
			font-size 10px
			opacity .6
			letter-spacing 2px
			max-height: 14px
			overflow: hidden
			
		&__price
			font-size 12px
		&__picture
			min-height 220px
			width 100%
			background-size contain
			background-position center center
			background-repeat no-repeat
			margin-bottom 10px
			transform scale(.9) translateZ(0)
			t transform, .2s
			&--no
				background-size 150px auto
			&-frame
				min-height 220px
				width 100%
				position relative
				display block
				overflow hidden
				b('loader.gif', center center no-repeat, transparent, 80px auto)
	&--without-images
		.product
			&__picture-frame
				position absolute
				transform translateY(-100%)
				opacity 0
				pointer-events none
				t(opacity)
				transition-duration .1s
			&--empty
				.product__picture-frame
					display none !important
			&__frame
				padding-top 240px
				margin-top -230px
			&__icon
				top -230px
			&--hover
				.product__picture-frame
					pointer-events initial
					transition-duration .3s
					transition-delay .1s
					opacity 1
	&--full-width
		@media (min-width scr_lg)
			.col-lg-3
				width 20%
	&--one-line
		@media (min-width scr_md)
			.col-lg-3:nth-child(n+5)
				display none
		@media (min-width scr_lg)
			.col-lg-3:nth-child(n+5)
				display block
.filter
	width 100%
	border 1px solid #dddddd
	padding 10px 10px 4px 10px
	margin-bottom 15px
	overflow hidden
	position relative
	min-height 34px
	&--loaded
		t all, .2s
	&:after
		position absolute
		z-index 20
		content ""
		top 0
		left 0
		background alpha(white, .8) url(/layout/images/loader.gif) center center no-repeat
		background-size 75px auto
		width 100%
		height 33px
		pointer-events none
		opacity 0
		t all, .4s
	&--loading
		&:after
			pointer-events initial
			opacity 1
	&--open
		.filter__content
			display block
		.filter__title
			svg
				transform rotate(60deg)
				transform-origin center center
	&__title
		width 100%
		background white
		text-transform uppercase
		font-weight bold
		font-size 11px
		position relative
		z-index 3
		cursor pointer
		t color
		svg
			position absolute
			right 0px
			width 8px
			top 3px
			t transform
		&:hover
			color red
			svg path
				fill red
		&--big
			font-size 13px
			padding-bottom 1px
			margin-bottom -3px
	&__content
		border-top 1px solid #dfdfdf
		margin-top 6px
		padding-top 15px
		display none
	&__colors
		margin-right -3px
		margin-left -3px
		line-height 4px
		margin-bottom 8px
	&__param
		width 100%
	.icheckbox, input[type="checkbox"], .icheckbox_color
		appearance none
		width 10px
		height 10px
		border 1px solid #dadada
		display inline-block
		margin-right 5px
		position relative
		top -1px
		t(all)
		box-shadow inset 0 0 0 1px white
		&.hover
			border-color black
		&.checked, &:checked
			background black
		&.disabled, &.disabled + label, &:disabled, &:disabled + label
			opacity .15
			pointer-events none
	
	.icheckbox_color, input.color
		width 20px
		margin 3px
		height 20px
		box-shadow inset 0 0 0 3px
		border 0
		cursor pointer
		top 0
		&.disabled
			opacity 0
		&:disabled
			opacity .15
			pointer-events none
		&.checked, &:checked
			background white
			box-shadow  inset 0 0 0 20px
	.icheckbox_color
		transition-duration 0s
		opacity 0
		&.ready
			opacity 1
			transition-duration .3s
			&.disabled, &:disabled
				opacity .15
	input[type="checkbox"]
		top -3px
	input[name="color"]
		top 0
		color attr(data-color, color)
	label
		font-weight normal
		font-size 13px
		display inline-block
		width 86%
		vertical-align top
		&:first-letter
			text-transform uppercase
