	width 80%
	height 20px
	border 1px solid #979899
	font-size 11px
	line-height 23px
	padding 0 3px
	text-align center
	margin-bottom 15px
.irs
	width 100%
	position relative
	height 15px
	margin-top 3px
	display inline-block
	.irs
		margin-top 0
	*:focus
		outline none
	&-line
		width 100%
		background #dde0e4
		height 8px
		display inline-block
		position absolute
		top 0
	&-grid, &-min, &-max, &-from, &-to, &-single
		display none
	&-bar
		position absolute
		height 8px
		background #8797a2
		top 0px
	&-slider
		position absolute
		background #000000
		width 5px
		height 16px
		top -4px
	&-hidden-input
		display none

