.team
	&-list
		&__item
			margin 20px 0
			border-bottom 1px solid #96969d
			padding-bottom 20px
		&__image
			background-size cover
			width 100%
			min-height 250px
			background-position center center
	&__content
		position absolute
		left 50%
		top 50%
		transform translateY(-50%)
		width 50%
	&__position, &__name
		font-weight 300
		text-transform: uppercase
		font-size 17px
		line-height 20px
		max-width 90%
		@media (min-width scr_sm)
			font-size 27px
			line-height 30px
	&__divider
		margin 15px 0 25px
		width 90px
		height 3px
		background: #96969d
		@media (min-width scr_sm)
			margin 25px 0 35px
	&__position
		opacity .7
		margin-bottom 15px
	&__name
		font-weight: bold
		font-size 25px
		line-height 25px
		@media (min-width scr_sm)
			font-size 40px
			line-height 40px
	&__slider
		margin-top 30px
		padding 0 20px
		.slick-prev, .slick-next
			@extend .lookbook .lookbook__slider .catalog .slick-next
			right: -10px
			margin-top -19px
		.slick-prev
			left -10px
			text-align: left
	&__arrow
		display none
	&__preview
		min-width 115px
		min-height 100px
		width 100%
		border 1px solid #c8d4d8
		t border
		display inline-block
		.textpage__content &
			background-size contain
			background-repeat no-repeat
			background-position bottom center
		position relative
		&-frame
			padding 0 15px
			&.active
				.team__preview
					border-color black
		&--active
			border-color black
		&:hover
			border-color black
			.team__preview-text
				opacity 1
		&-text
			opacity 0
			t opacity
			position absolute
			width 100%
			height 100%
			background rgba(0, 0, 0, .8)
			color white
			font-size 10px
			text-align center
			line-height 100px
			span
				display inline-block
				vertical-align: middle
				line-height 12px
	&__item
		position relative
		min-height 640px
		background-position left bottom
		background-repeat no-repeat
		background-size contain
		display none
		&--active
			display block
		&:after
			content ""
			width 100%
			position absolute
			bottom 0px
			left 0
			border-bottom 1px solid #d5dbdf