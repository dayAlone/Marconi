.toolbar
	full-width()
	top           0
	left          0
	width         100%
	height        50px
	margin-bottom -50px
	position      relative
	background    black
	line-height   50px
	z-index       300
	white-space   no-wrap
	margin-bottom 20px
	&:after
		display none
		position absolute
		background white
		height 1px
		width 100%
		top 50%
		left 0
		content ""
	&__desktop
		display none
		@media (min-width scr_md)
			display block
	&__tablet
		display none
		@media (min-width scr_sm)
			display block
		@media (min-width scr_md)
			display none
	&__nav-trigger
		font-weight bold
		text-transform: uppercase
		color white
		display inline-block
		vertical-align: middle
		position relative
		top 3px
		&:focus
			color white
		svg
			position relative
			top -2px
			width 25px
			height 20px
			display inline-block
			vertical-align: middle
			margin-right 8px
		&:hover
			color red
			svg
				path
					fill red
	.nav
		width 100%
		text-align: center
		&__item
			t(background)
			display inline-block
			text-transform uppercase
			color white
			font-weight bold
			height 50px
			padding-top 1px
			line-height 55px
			padding 0 13px
			font-size 13px
			background black
			overflow hidden
			&:hover
				background red
			&--active
				background white
				color black
				&:hover
					background white
					color black
	.social
		width 100%
		line-height 52px
		&__item
			margin-right 15px
			svg
				vertical-align: middle
				max-height 19px
				max-width 19px
				path
					fill white
			&:hover
				svg path
					fill red
	.auth
		width 100%
		line-height 53px
		color white
		white-space: nowrap
		text-align: right
		&--active
			.auth__profile
				display block
			.auth__login
				display none
		&__profile
			display none
			.auth__item:hover
				border-line(red, 11px, 4px)
		&__login
			display block
			.auth__item:hover
				border-dashed(red, 11px, 4px)
		&__divider
			position relative
			top 1px
			opacity .4
			margin 0 5px
		.auth__item
			font-size 13px
			color white
			@media (min-width scr_lg)
				font-size 11px
			&:hover
				color red
				
.header
	full-width()
	margin-top 10px
	margin-bottom 25px
	position relative
	z-index 40
	white-space no-wrap
	.logo
		&__line
			
			background #8797a2
			opacity .35
			height 1px
			display inline-block
			float left
			margin 17px 0
			width 100%
			@media (min-width scr_sm)
				width 140%
			@media (min-width scr_md)
				width 100%
			@media (min-width scr_lg)
				width 118%
			&--left
				float right
		svg
			width 100%
			height 30px
		.index &
			&__line
				width 100%
				@media (min-width scr_lg)
					width 120%
				margin 16px 0
				&--right
					float: right
			svg
				max-width 238px
				path
					fill white
	.contacts
		position relative
		padding-left 33px
		margin-top 4px
		line-height 13px
		a
			color black
		&__number
			font-weight: bold
			color black
			font-size 14px
			margin-top 4px
			display inline-block
			&:hover
				color red
		&__text
			font-size 11px
			color #272727
			opacity .7
		svg
			left 0
			top 50%
			margin-top -12px
			width 23px
			height 23px
			position absolute
	&__links
		width 85%
		float right
		@media (min-width scr_md)
			width 100%
		@media (min-width scr_lg)
			width 80%
	.cart, .simmilar
		position relative
		font-size 12px
		color black
		margin-left 20px
		white-space no-wrap
		border-line(alpha(black,.2), 12px)
		svg
			top -1px
			left -20px
			position absolute
			width 16px
			height 13px
			path
				fill black
		&:hover
			color red
			border-line(alpha(red,.2), 12px)
			svg path
				fill red
.sub-nav
	width 100%
	border-top 1px solid #d5dbdf
	border-bottom 1px solid #d5dbdf
	height 32px
	text-align: center
	margin-top 20px
	@media (min-width: scr_md)
		margin-top: 0
	&__item
		height 32px
		display inline-block
		margin-top -1px
		line-height 36px
		text-transform: uppercase
		font-size 12px
		font-weight: bold
		padding 0 12px
		color #6e6f79
		letter-spacing: 1px
		@media (min-width: scr_md)
			font-size 11px
		&:first-of-type
			.menu-padding &
				@media (min-width: scr_lg)
					margin-left 190px
		&:hover
			color red
		&--active
			color black
			border-bottom 2px solid black
			&:hover
				color black
.search
	width 100%
	position relative
	margin-top -1px
	&__button
		appearance none
		border 0
		background transparent
		width 29px
		height 29px
		background white
		position absolute
		padding 0
		top 2px
		right 2px
		line-height: 29px
		text-align: center
		svg
			path
				fill black
			vertical-align: middle
			display: inline-block
			position relative
			top 2px
		&:hover
			svg path
				fill red
	&__input
		width 100%
		height 33px
		border 2px solid black
		padding 0 8px
		line-height 35px
		font-size 11px
.brand-select
	z-index 300
	.dropdown
		position relative
		ul
			margin 0
			padding 0
			list-style none
			> li 
				position relative
				&:hover
					> ul
						opacity 1
					> .dropdown__item
						background black
				> ul
					position absolute
					top 0
					opacity 0
					t opacity
					left 100%
		&--open .dropdown__trigger
			background red
		&__trigger
			position relative
			z-index 40
			width 100%
			height 33px
			background black
			line-height 38px
			display inline-block
			margin-top -1px
			padding 0 10px
			font-size 12px
			text-transform: uppercase
			color white
			font-weight: bold
			t(background)
			svg 
				position absolute
				right 10px
				top 14px
				path
					fill white
			&:hover
				background red
		&__frame
			background red
			position absolute
			top 100%
			left 0
			width 100%
			z-index 20
			padding 0px
		&__item
			width 100%
			display inline-block
			color white
			text-transform: uppercase
			font-size 12px
			font-weight: bold
			padding 9px 10px 3px
			background red
			white-space no-wrap
			svg
				position absolute
				right 10px
				top 13px
				transform rotate(30deg)
				path
					fill white
			&:hover
				background black