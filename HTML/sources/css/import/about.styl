.about
	min-height 700px
	.nav__item:nth-child(1)
		background white
		color black
	&__slider
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background white
		min-height 700px
		.fotorama__stage
			min-height 700px
		&-item
			width 100%
			height 100%
			background-size cover
			background-position center center
			&-content
				width 850px
				background alpha(black, .75)
				box-sizing border-box !important
				min-height 100px
				padding 35px 50px
				position absolute
				top calc(50%+20px)
				left 50%
				transform translate(-50%, -50%)
				color white
				h3
					font-size 16px
					text-transform: uppercase
					font-weight: bold
					margin-bottom 40px
					margin-top 25px
				p
					font-size 16px
				a
					color red
					font-weight: bold
					border-line(alpha(@color,.4))
				p+p	
					margin-top 25px
					margin-bottom 0
		&-title
			text-align center
			text-transform uppercase
			font-weight bold
			font-size 29px
			margin-bottom 35px
			margin-top 5px
			position relative
			&-after, &-before
				position absolute
				content ""
				height 1px
				background white
				width 100%
				top 9px
				left 0
				display none
			&-before
				left auto
				right 0
		&-arrow
			position absolute
			top 50%
			margin-top 5px
			transform translateY(-50%)
			cursor pointer
			&--prev
				left -80px
			&--next
				right -60px