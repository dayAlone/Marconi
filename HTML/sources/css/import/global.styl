html, body
	height 100%
body
	font-family 'Proxima', 'Helvetica Neue', 'Arial', sans-serif
	min-height 100%
	color black
	-webkit-font-smoothing: subpixel-antialiased
	&.index
		overflow hidden

.container
	min-width 980px

svg
	t fill
	path, g
		t fill

.scroll-fix
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-index 300000
	pointer-events none
	&--on
		pointer-events initial

.wrap 
	full-width()
	min-height 100%
	padding-bottom 60px
	margin-bottom -60px
	position relative
	&:after
		content ""
		display block
	background-repeat no-repeat
	background-position center center
	.index &
		.background
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			b('bg-index.jpg', top center no-repeat, white, cover)
			animation-duration: 40s
			animation-name: zoom
			-webkit-animation-fill-mode: forwards

@keyframes zoom
	from
		transform scale(1)
	to
		transform scale(1.1)

.dropdown
	&__frame, &__select
		display none

.modal
	.close
		position absolute
		right -60px
		top 0
		svg
			width 40px
			height 40px
			path
				fill white
	&-content
		border-radius 0
		min-height 100px
		padding 30px
	&-frame
		width 100%
		border 2px solid black
		min-height 100px
		position relative
		padding 30px
		&:after
			content attr(data-title)
			position absolute
			background white
			text-transform: uppercase
			font-weight: bold
			padding 0 20px
			top -8px
			left 50%
			font-size 13px
			letter-spacing 6px
			transform translateX(-50%)
	&-backdrop
		&.in
			opacity .8

#bx-composite-banner
	text-transform: none
	top -7px
	position absolute
	right 0
	white-space no-wrap
	.index &
		right 80%
	opacity .4
	line-height 40px
	t opacity
	&:hover
		opacity 1