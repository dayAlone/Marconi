html, body
	height 100%
body
	font-family 'Proxima', 'Helvetica Neue', 'Arial', sans-serif
	min-height 100%
	color black
	-webkit-font-smoothing: subpixel-antialiased
	&.index
		overflow hidden

.container
	min-width 980px

.textpage
	&__content
		padding-bottom 50px
		ul, ol
			padding-left 20px
			margin-bottom: 25px
			li
				margin-top 15px
		a
			color red
			border-line alpha(@color, .5)
				
svg
	t fill
	path, g
		t fill

.scroll-fix
	position fixed
	width 100%
	height 100%
	top 0
	left 0
	z-index 300000
	pointer-events none
	.bx-ie
		display none
	&--on
		pointer-events initial

.wrap 
	full-width()
	min-height 100%
	padding-bottom 60px
	margin-bottom -60px
	position relative
	&:after
		content ""
		display block
	background-repeat no-repeat
	background-position center center
	.index &
		.background
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			b('bg-index.jpg', top center no-repeat, white, cover)
			t all
			animation-duration: 40s
			animation-name: zoom
			-webkit-animation-fill-mode: forwards

@keyframes zoom
	from
		transform scale(1)
	to
		transform scale(1.1)

.dropdown
	&__frame, &__select
		display none

.profile
	max-width 95%
	label
		text-align: left
		width 100%
		letter-spacing 2px
		font-size 11px
		text-transform: uppercase
		line-height 35px
	.row + .row
		margin-top 10px
	input
		&:focus
			outline 0
		+ label
			margin-top 10px
		&[type="text"], &[type="email"], &[type="password"]
			height 32px
			line-height 35px
			width 100%
			border 1px solid #cccccc
			t border
			text-align: left
			padding 0 10px
			&:focus
				border-color black
			&.parsley-error
				border-color red
				&:focus
					border-color alpha(red,.7)
		&[type="submit"]
			appearance none
			border 0
			margin-bottom 0
			font-size 13px
.parsley-errors-list
	display none
.modal
	a
		color red
		font-size 13px
		border-line alpha(@color, .3)
		&:hover
			color black
			border-line alpha(@color, .3)
		&.lost
			margin-left 10px
	&__title
		font-size 35px
		text-align: center
		margin-bottom 10px
		margin-top -10px
	.captcha_refresh
		background transparent !important
		svg
			width 30px
			height 30px
			position relative
			left -15px
			top 24px
			path
				fill black
		&:hover
			svg
				path
					fill red
	label
		text-align: center
		width 100%
		letter-spacing 2px
		font-size 11px
		text-transform: uppercase
	ul + label
		margin-top 10px
	.captcha
		height 32px
		background-position center center
		background-repeat no-repeat
		width 100%
		border 1px solid #cccccc
	input
		&:focus
			outline 0
		+ label
			margin-top 10px
		&[type="text"], &[type="email"], &[type="password"]
			height 32px
			line-height 35px
			width 100%
			border 1px solid #cccccc
			t border
			text-align: center
			padding 0 10px
			&:focus
				border-color black
			&.parsley-error
				border-color red
				&:focus
					border-color alpha(red,.7)
		&[type="submit"]
			appearance none
			border 0
			margin-bottom 0
			font-size 13px
	textarea
		&:focus
			outline 0
		min-height 80px
		resize none
		width 100%
		border 1px solid #cccccc
		t border
		text-align: center
		padding 0 10px
		&.parsley-error
				border-color red
		&:focus
			border-color black
	.close
		position absolute
		right -60px
		top 0
		background transparent !important
		svg
			width 40px
			height 40px
			path
				fill white
	&-content
		border-radius 0
		min-height 100px
		padding 30px
	&-frame
		width 100%
		border 2px solid black
		min-height 100px
		position relative
		padding 30px
		&:after
			content attr(data-title)
			position absolute
			background white
			text-transform: uppercase
			font-weight: bold
			padding 0 20px
			top -8px
			left 50%
			font-size 13px
			letter-spacing 6px
			transform translateX(-50%)
	&-backdrop
		&.in
			opacity .8

.page
	full-width()
	&__title
		font-weight: bold
		font-size 30px
		border-line alpha(black, .2)
		margin-bottom 15px
		max-width 95%
		&--full-width
			max-width none
		&--no-border
			background transparent
			max-width 100%

.side-nav
	width 100%
	border 1px solid #dfdfdf
	padding 28px 20px 20px
	margin-top 0px
	full-width()
	max-width 200px
	&__item
		width 100%
		display inline-block
		text-transform: uppercase
		color black
		font-weight: bold
		&--active
			color red
		&:hover
			color red
		& + .side-nav__item
			margin-top 15px
.contacts
	p
		font-size 15px
		line-height 23px
		a
			color red
			border-line(alpha(@color, .4))
			&:hover
				color black
				border-line(alpha(@color, .4))
	#contactsMap
		min-height 550px
		full-width()
		margin-top 40px
		border-top 1px solid #e7e7e7

.map-columns
	width 100%
	ul
		list-style none
	.map-level-0
		padding-left 0
		> li > a
			font-size 18px			
#bx-composite-banner
	text-transform: none
	top -7px
	position absolute
	right 0
	transform scale(.8)
	white-space no-wrap
	.index &
		right 150px
	opacity .4
	line-height 40px
	t opacity
	&:hover
		opacity 1

.feedback
	&__dialog
		max-width 500px
	&__success
		display none