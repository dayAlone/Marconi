.lookbook
	.page > .container > .row.enter
		padding 0
		margin 0
		margin-bottom 40px
		[class*='col-']
			padding-right 0
			padding-left 0
		@media (min-width scr_md)
			.col-md-6
				width 50%
	&__promo
		display block
		position relative
		min-height 290px
		background-size cover
		background-position center center
		width 100%
		cursor pointer
		&:hover
			.lookbook__promo-title
				opacity 1
		&-title
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background alpha(black, .8)
			opacity 0
			t(opactiy, 1s)
			span
				position absolute
				max-width 80%
				top 50%
				left 50%
				transform translate(-50%, -50%)
				text-transform: uppercase
				color white
				font-size 30px
				font-weight 300
				line-height 30px
				text-align: center
				
		&--height
			@media (min-width scr_sm)
				min-height 580px
	&__slider, &__picture, &__slider-preview
		min-height 380px
		@media (min-width scr_sm)
			min-height 650px
	&__picture
		background-size cover
		background-position center center
		background-repeat no-repeat
		&--contain
			background-size contain
	&__slider
		width 103%
		margin-left -1.5%
		position relative
		z-index 30
		iframe
			width 100%
			min-height 650px
		&-video
			width 100%
			height 650px
			overflow hidden
		&-preview
			position absolute
			z-index 40
			top 0
			cursor pointer
			width 300px
			opacity 0
			transition-property opacity, background, transform, width
			transition-duration .3s
			background-size cover
			min-width 30px
			@media (min-width scr_sm)
				min-width 100px
			&--disabled
				z-index 0
			svg
				position absolute
				z-index 10
				top 50%
				left 50%
				transform translate(-50%, -50%)
				width 15px
				height 40px
				@media (min-width scr_sm)
					width auto
					height auto
			&:after
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				background alpha(black, .9)
				content ""
			&--prev
				right 100%
				transform translateX(100%)
				background-position top right
			&--next
				left 100%
				transform translateX(-100%)
				background-position top left
			&--width
				&.lookbook__slider-preview
					&--prev
						transform translateX(calc(100%-200px))
					&--next
						transform translateX(calc(-100%-200px))
		&-item
			padding 0 1.5% 0px !important
			*, &
				box-sizing: border-box !important
			full-width()
		.catalog
			
			margin-bottom 100px
			position relative
			z-index 3000
			text-align: center
			@media (min-width scr_sm)
				opacity 0
			.slick-list
				overflow visible
			.slick-prev
				left -15px
			.slick-next
				right -15px
			.slick-next, .slick-prev
				width 30px
				height 30px
				margin-top -25px
				t opacity
				&:before
					display none
				&.slick-disabled
					opacity .3
				svg
					width 30px
					height 30px
					path
						fill black
			.col-xs-4
				display inline-block
				float none
			.product
				margin-bottom 0
				&__frame
					box-sizing: initial !important
		.fotorama__active
			.lookbook__divider
				t(opacity)
				opacity 1
			.catalog.slick-initialized
				t(opacity)
				opacity 1
	&__title, &__divider
		width 100%
		text-transform: uppercase
		position relative
		text-align: center
		font-size 20px
		margin 0 0 30px 0
		padding 0
		span
			position relative
			z-index: 20
			background white
			padding 0 20px
		&:after
			content ""
			background #d5dbdf
			height 1px
			width 100%
			position absolute
			top 8px
			left 0
	&__divider
		font-size 15px
		margin-top 30px
		opacity 0
		t(opacity)
		span
			font-weight: bold
			
			