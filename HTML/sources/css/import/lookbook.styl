.lookbook
	.page > .container > .row.enter
		padding 0
		margin 0
		margin-bottom 40px
		[class*='col-']
			padding-right 0
			padding-left 0
		.col-md-6
			width 50%
	.nav__item:nth-child(4)
		background white
		color black
	&__promo
		display block
		position relative
		min-height 290px
		background-size cover
		background-position center center
		width 100%
		cursor pointer
		&:hover
			.lookbook__promo-title
				opacity 1
		&-title
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			background alpha(black, .8)
			opacity 0
			t(opactiy, 1s)
			span
				position absolute
				max-width 80%
				top 50%
				left 50%
				transform translate(-50%, -50%)
				text-transform: uppercase
				color white
				font-size 30px
				font-weight 300
				line-height 30px
				text-align: center
				
		&--height
			min-height 580px
	&__slider, &__picture
		min-height 750px
	&__picture
		background-size cover
		background-size center center
	&__slider
		width 103%
		margin-left -1.5%
		position relative
		z-index 30
		&-preview
			position absolute
			min-height 750px
			top 0
			cursor pointer
			width 300px
			opacity 0
			transition-property opacity, background
			transition-duration .3s
			svg
				position absolute
				z-index 10
				top 50%
				left 50%
				transform translate(-50%, -50%)
			&:after
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				background alpha(black, .8)
				content ""
			&--prev
				right 100%
				transform translateX(100%)
			&--next
				left 100%
				transform translateX(-100%)
		&-item
			padding 0 1.5% 0px !important
			*, &
				box-sizing: border-box !important
			full-width()
		.catalog
			opacity 0
			padding-bottom 100px
			position relative
			z-index 3000
			text-align: center
			.col-xs-4
				display inline-block
				float none
			.product__frame
				box-sizing: initial !important
		.fotorama__active
			.catalog, .lookbook__divider
				t(opacity)
				opacity 1
				
	&__title, &__divider
		width 100%
		text-transform: uppercase
		position relative
		text-align: center
		font-size 20px
		margin 0 0 30px 0
		padding 0
		span
			position relative
			z-index: 20
			background white
			padding 0 20px
		&:after
			content ""
			background #d5dbdf
			height 1px
			width 100%
			position absolute
			top 8px
			left 0
	&__divider
		font-size 15px
		margin-top 30px
		opacity 0
		t(opacity)
		span
			font-weight: bold
			
			